<h1>ログイン</h1>

<%= form_with url: login_path, local: true do |form| %>
  <div>
    <%= form.label :email, "メールアドレス" %><br>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :password, "パスワード" %><br>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "ログイン" %>
  </div>
<% end %>

